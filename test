    -DLLVM_DIR=/opt/rocm/llvm/lib/cmake/llvm \
    -DCMAKE_PREFIX_PATH=/opt/rocm \
    -DAMD_COMGR_GFX_ARCHS="gfx1151"

ninja && sudo ninja install
